            Q[classes+ '_pri'] += Q[classes+ '_scc']/8;
        }

        if (Q.ds_allies == 1) {
            Q[classes+ '_ds'] += Q[classes+ '_scc']/8;
        }

        Q[classes+ '_scc'] = 0;
    }
} 

// 1. update dates
if (Q.week_actions >= 1) {
    Q.time += 1;
    Q.week_actions = 0;
    Q.week += 2;
