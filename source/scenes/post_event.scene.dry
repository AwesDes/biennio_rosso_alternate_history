                Q.veterans_pnf += 3/12;
                Q.middle_class_pnf += 1/12;
                Q.industrialists_pnf += 2/12;
                Q.workers_pnf += 1/12;
            }

            if (Q.pnf_in_bn == 1) {
                Q.industrialists_pnf += 7/12;
                Q.rural_pnf += 3/12;
            }
        } 

        if (Q.year == 1922) {
